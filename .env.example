# Anthropic Claude API Configuration
ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic
ANTHROPIC_AUTH_TOKEN=your_anthropic_api_key_here
ANTHROPIC_MODEL=glm-4.5-air
SYSTEM_PROMPT_PATH=./system-prompt.md

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Rate Limiter Configuration (optional, defaults: 10 requests per 60 seconds)
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

# Conversation Management (optional, default: 10)
MAX_HISTORY_SIZE=10

# Logging (optional, default: info)
LOG_LEVEL=info

# Bot Mode Configuration (optional, default: polling)
# Options: 'polling' or 'webhook'
BOT_MODE=polling

# Webhook Configuration (required if BOT_MODE=webhook)
# WEBHOOK_URL=https://your-domain.com
# WEBHOOK_PORT=3000
# WEBHOOK_HOST=0.0.0.0
# WEBHOOK_PATH=/telegram/webhook
